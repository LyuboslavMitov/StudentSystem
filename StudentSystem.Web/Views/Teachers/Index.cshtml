@model IEnumerable<StudentSystem.Web.Models.TeacherViewModel>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("_sidebar")
@Html.Partial("_helpbutton")
<body class="theme-invert">
    <div class="jumbotron col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 text-center" style="color: black">
        <div class="page-header">
            <h1>Учители</h1>
        </div>
        <p><a class="btn btn-danger btn-block btn-lg" href="@Url.Action("Create", "Teachers")">Създаване на нов.</a></p>

        <table class="table">
            <tr>
                <th class="text-center">
                   Регистрирани профили
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.userName)
                    </td>
                    <td>
                        @Html.ActionLink("Промени", "Edit", new { id = item.UserID }) |
                        @Html.ActionLink("Детайли", "Details", new { id = item.UserID }) 
                        @* @Html.ActionLink("Delete", "Delete", new { id=item.UserID })*@
                    </td>
                </tr>
            }

        </table>
        </div>
</body>