@model IEnumerable<StudentSystem.Web.Models.StudentClassViewModel>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("_sidebar")
@Html.Partial("_helpbutton")
<body class="theme-invert">
    <div class="jumbotron col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 text-center" style="color: black">
        <div class="page-header">
            <h1>Класове</h1>
        </div>
        <p><a class="btn btn-danger btn-block btn-lg" href="@Url.Action("Create", "StudentClass")">Създаване на нов.</a></p>

        <table class="table">
            <tr>
                <th class="text-center">
                    Клас
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>
                    <td>
                        @Html.ActionLink("Промени", "Edit", new { id = item.StudentClassID }) |
                        @Html.ActionLink("Детайли", "Details", new { id = item.StudentClassID }) |
                        @Html.ActionLink("Изтрий", "Delete", new { id = item.StudentClassID })
                    </td>
                </tr>
            }

        </table>
        </div>
    </body>
